<main class="form-signin">
    <h1 class="h3 mb-3 fw-normal">Sign in</h1>
    
    <form method="POST" action="/login/entrar">                
        <label for="inputEmail" class="visually-hidden">E-mail</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Digite seu e-mail" required autofocus>
        
        <label for="inputPassword" class="visually-hidden">Senha</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Digite sua senha" required>
        
        <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="remember-me"  value="remember-me"> Lembrar senha
        </label>
        </div>
        
        <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar agora!</button>          
      </form>
      
      <p class="mt-5 mb-3 text-muted">&copy; NextDigital 2021</p>     
  </main>